            android:layout_below="@id/layout_today_tip"
            android:layout_centerHorizontal="true"
            android:layout_height="32dp"
            android:layout_marginTop="@dimen/margin_medium_3"
            android:layout_width="32dp"
            android:visibility="visible"/>

