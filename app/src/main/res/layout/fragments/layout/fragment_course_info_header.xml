<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/course_background_sample"
    tools:context="com.padc.interactive_training.fragments.CourseInfoHeaderFragment">

    <ImageView
        android:id="@+id/iv_course_cover_image"
        android:layout_width="@dimen/header_image_size"
        android:layout_height="@dimen/header_image_size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@color/course_background_sample"
        android:paddingBottom="@dimen/margin_large"
        android:paddingTop="@dimen/margin_medium_2"
        android:src="@drawable/co_terrace" />

    <com.padc.interactive_training.components.MMTextView
        android:id="@+id/tv_course_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_course_cover_image"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_regular_3x"
        android:textColor="@color/white_full"
        android:text="UV ေရာင္ျခည္ကို ဘယ္လိုကာကြယ္မလဲ"/>

</RelativeLayout>