<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:paddingBottom="0dp">

        <RelativeLayout
            android:id="@+id/layout_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:src="@drawable/ic_face_24dp" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/iv_profile"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="4"
                android:text="Nay LinAung"
                android:textColor="@color/black_overlay"
                android:textSize="@dimen/text_regular"
                android:textStyle="normal" />

            <com.padc.interactive_training.components.MMTextView
                android:id="@+id/tv_post_past_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_user_name"
                android:layout_toRightOf="@id/iv_profile"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="4"
                android:text="လြန္ခဲ့ေသာ ၁ နာရီ"
                android:textColor="@color/black_overlay"
                android:textSize="@dimen/text_small" />

            <com.padc.interactive_training.components.MMTextView
                android:id="@+id/tv_comma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_user_name"
                android:layout_toRightOf="@id/tv_post_past_time"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="4"
                android:text=","
                android:textColor="@color/black_overlay"
                android:textSize="@dimen/text_small" />

            <com.padc.interactive_training.components.MMTextView
                android:id="@+id/tv_post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_user_name"
                android:layout_toRightOf="@id/tv_comma"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="4"
                android:text="12:46 PM"
                android:textColor="@color/black_overlay"
                android:textSize="@dimen/text_small" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_discussion_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_user"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="4"
            android:text="Any course update for Final?"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_regular_2x"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_discussion_title"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginRight="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_smallest"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="6"
            android:paddingLeft="@dimen/margin_medium_2"
            android:paddingRight="@dimen/margin_medium_2"
            android:text="Hi there. \n\nCan we expect a full course update since the final version of Angular 2.0.0 is out? Thanks for your amazing work."
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/text_regular" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_description"
            android:layout_marginTop="@dimen/margin_medium"
            android:paddingBottom="@dimen/margin_medium_2"
            android:paddingLeft="@dimen/margin_medium_2"
            android:paddingRight="@dimen/margin_medium_2"
            android:paddingTop="@dimen/margin_medium">

            <ImageView
                android:id="@+id/iv_reply"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_medium"
                android:src="@drawable/ic_chat_bubble_outline_24dp" />

            <TextView
                android:id="@+id/tv_reply_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_reply"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_smallest"
                android:gravity="left"
                android:text="Replies (11)"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_small"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/layout_like_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|right">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_heart_outline_grey" />

                <TextSwitcher
                    android:id="@+id/tsLikesCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:inAnimation="@anim/slide_in_likes_counter"
                    android:outAnimation="@anim/slide_out_likes_counter">

                    <TextView
                        android:id="@+id/tv_likes_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Like (123)"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/primary"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_like_counter" />
                </TextSwitcher>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>

