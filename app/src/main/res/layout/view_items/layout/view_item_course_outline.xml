<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginRight="@dimen/margin_medium">

    <TextView
        android:id="@+id/tv_course_outline_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginTop="14dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:paddingRight="@dimen/margin_medium_3"
        android:text="1"
        android:textAllCaps="true"
        android:textColor="@color/text_black_ish"
        android:textSize="@dimen/text_small"
        android:textStyle="bold" />

    <com.padc.interactive_training.components.MMTextView
        android:id="@+id/tv_course_outline_desp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="@dimen/margin_medium"
        android:lineSpacingMultiplier="1.2"
        android:gravity="left"
        android:paddingRight="@dimen/margin_medium_3"
        android:textAllCaps="true"
        android:textColor="@color/text_black_ish"
        android:textSize="@dimen/text_regular_2x" />

</LinearLayout>

