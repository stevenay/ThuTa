<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.padc.interactive_training.activities.TestActivity"
    tools:showIn="@layout/activity_test">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <include layout="@layout/true_false_question"
                android:layout_width="match_parent"
                android:layout_height="512dp"/>
            <include layout="@layout/drag_drop_question"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:layout_height="512dp"
                android:layout_width="match_parent" />
        </LinearLayout>
    </ScrollView>



</RelativeLayout>
