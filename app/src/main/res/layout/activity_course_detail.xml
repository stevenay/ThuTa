<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.padc.interactive_training.activities.CourseDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:background="@color/course_background_sample"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
            app:contentScrim="@color/course_background_sample"
            app:expandedTitleGravity="bottom|center_horizontal"
            app:expandedTitleMarginBottom="@dimen/margin_xxlarge"
            app:expandedTitleMarginEnd="@dimen/margin_medium_2"
            app:expandedTitleMarginStart="@dimen/margin_medium_2"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:statusBarScrim="@color/course_background_sample">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_1"
                android:background="@color/course_background_sample"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="pin">

                <TextView
                    android:id="@+id/tv_course_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xxlarge"
                    android:gravity="left"
                    android:lineSpacingMultiplier="1.3"
                    android:paddingLeft="@dimen/margin_xxlarge"
                    android:paddingRight="@dimen/margin_medium"
                    android:text="Improve your Mobile App with Strong UX"
                    android:textAllCaps="false"
                    android:textColor="@color/white_full"
                    android:textSize="@dimen/text_regular_2.5x"
                    android:textStyle="bold" />

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="COURSE OVERVIEW"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_regular"
                    android:textStyle="bold" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <Button
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:layout_marginBottom="-6dp"
            android:layout_marginTop="-6dp"
            android:layout_marginRight="-4dp"
            android:layout_marginLeft="-4dp"
            android:backgroundTint="@color/white_full"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:drawablePadding="-15sp"
            android:text="Start Course"
            android:textSize="@dimen/text_regular"
            android:textStyle="bold"/>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-4dp"
                android:layout_marginRight="-4dp"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <requestFocus />

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_course_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@color/transparent"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:paddingBottom="0dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium">

                            <ImageView
                                android:id="@+id/iv_course_summary"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginLeft="@dimen/margin_medium"
                                android:layout_marginTop="@dimen/margin_medium_1"
                                android:clickable="true"
                                android:src="@drawable/ic_receipt_white_24dp" />

                            <TextView
                                android:id="@+id/tv_course_summary_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_medium"
                                android:layout_marginRight="@dimen/margin_medium"
                                android:layout_marginTop="14dp"
                                android:fontFamily="sans-serif-light"
                                android:gravity="center_horizontal"
                                android:paddingRight="@dimen/margin_medium_3"
                                android:text="Course Summary"
                                android:textAllCaps="true"
                                android:textColor="@color/text_black_ish_2"
                                android:textSize="@dimen/text_small"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <com.padc.interactive_training.components.MMTextView
                            android:id="@+id/tv_course_summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_medium_3"
                            android:layout_marginLeft="@dimen/margin_medium"
                            android:layout_marginRight="@dimen/margin_medium"
                            android:layout_marginTop="@dimen/margin_large"
                            android:lineSpacingMultiplier="1.2"
                            android:padding="@dimen/margin_medium"
                            android:text="Desktop Applications၊ Website၊ Mobile App မ်ားေရးသားရာတြင္ ဘက္စံုအသံုးျပဳနိုင္ေသာ Programming Language တစ္ခုျဖစ္ပါတယ္။
Course တြင္ ပါဝင္ေသာ သင္ခန္းစာအားလံုးကို Free ေလ့လာနိုင္ပါသည္။"
                            android:textColor="@color/secondary_text"
                            android:textSize="@dimen/text_regular_2x" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_course_outline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@color/transparent"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:paddingBottom="0dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium">

                            <ImageView
                                android:id="@+id/iv_course_outline"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginLeft="@dimen/margin_medium"
                                android:layout_marginTop="@dimen/margin_medium_1"
                                android:clickable="true"
                                android:src="@drawable/ic_receipt_white_24dp" />

                            <TextView
                                android:id="@+id/tv_course_outline_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_medium"
                                android:layout_marginRight="@dimen/margin_medium"
                                android:layout_marginTop="14dp"
                                android:fontFamily="sans-serif-light"
                                android:gravity="center_horizontal"
                                android:paddingRight="@dimen/margin_medium_3"
                                android:text="Course Outline"
                                android:textAllCaps="true"
                                android:textColor="@color/text_black_ish_2"
                                android:textSize="@dimen/text_small"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_course_outline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_marginLeft="@dimen/margin_medium"
                            android:layout_marginBottom="@dimen/margin_medium_3"
                            android:nestedScrollingEnabled="false"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
