<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/course_background_dark_sample"
    tools:context=".fragments.PopupQuestionFragment">

    <TextView
        android:id="@+id/tv_screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:text="@string/txt_multiple_choice"
        android:textAllCaps="true"
        android:textColor="@color/white_full"
        android:textSize="@dimen/text_regular_2x"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_screen_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_medium_2"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.2"
        android:text="Which kind of activity should we do to prevent UV rays for our skin?"
        android:textColor="@color/white_full"
        android:textSize="@dimen/text_regular_3x" />

    <RadioGroup
        android:id="@+id/rdo_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_question_text"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginRight="@dimen/margin_medium_2"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rdo_choice_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium_2"
            android:buttonTint="@color/primary"
            android:checked="true"
            android:text="Apply Sun Cream"
            android:textColor="@color/white_full"
            android:textSize="@dimen/text_regular_3x" />

        <RadioButton
            android:id="@+id/rdo_choice_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium_2"
            android:buttonTint="@color/primary"
            android:checked="false"
            android:text="Use Umbrella"
            android:textColor="@color/white_full"
            android:textSize="@dimen/text_regular_3x" />

        <RadioButton
            android:id="@+id/rdo_choice_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium_2"
            android:buttonTint="@color/primary"
            android:checked="false"
            android:text="Do Nothing"
            android:textColor="@color/white_full"
            android:textSize="@dimen/text_regular_3x" />

    </RadioGroup>

</RelativeLayout>
