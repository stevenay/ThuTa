<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_smallest"
    android:background="@drawable/card_border_color"
    app:cardCornerRadius="@dimen/margin_small"
    app:cardElevation="@dimen/margin_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_page_number_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:layout_weight="0"
            android:gravity="center_horizontal"
            android:text="1 of 10 pages"
            android:textSize="@dimen/text_small"
            android:textStyle="bold" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/layout_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_lesson_image"
                        android:layout_width="@dimen/lesson_image_size"
                        android:layout_height="@dimen/lesson_image_size"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sample_image" />
                </RelativeLayout>

                <com.padc.interactive_training.components.MMTextView
                    android:id="@+id/tv_lesson_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_lesson_image"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_large"
                    android:fontFamily="sans-serif-light"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingLeft="@dimen/margin_medium_2"
                    android:paddingRight="@dimen/margin_medium_2"
                    android:text="ပါတယ္။ သူက radiation ေတြကိုပါ ကာကြယ္နိုင္စြမ္းရွိပါတယ္။"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_regular_2.5x" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">

            <!--<ImageButton-->
                <!--android:id="@+id/btn_comment"-->
                <!--android:layout_width="24dp"-->
                <!--android:layout_height="24dp"-->
                <!--android:layout_marginBottom="13dp"-->
                <!--android:layout_marginLeft="@dimen/margin_medium_2"-->
                <!--android:layout_marginTop="@dimen/margin_medium_2"-->
                <!--android:background="@color/transparent"-->
                <!--android:scaleType="fitCenter"-->
                <!--android:src="@drawable/ic_chat_24dp" />-->

            <ImageButton
                android:id="@+id/btn_request_article"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_record_voice_over_24dp" />

            <Button
                android:id="@+id/btn_todo_lists"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_toRightOf="@id/btn_request_article"
                android:layout_marginLeft="@dimen/margin_medium_1"
                android:layout_marginBottom="12dp"
                android:paddingLeft="@dimen/margin_medium"
                android:paddingRight="@dimen/margin_medium"
                android:background="@drawable/bg_no_border_button"
                android:text="1 todo list"
                android:textColor="@color/text_white_ish"
                android:textSize="@dimen/text_small"
                android:textAllCaps="false"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btn_questions"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginBottom="14dp"
                android:layout_toRightOf="@id/btn_todo_lists"
                android:background="@drawable/bg_no_border_button"
                android:text="3 questions"
                android:textSize="@dimen/text_small"
                android:textAllCaps="false"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/btn_pin"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginBottom="12dp"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_pin_image" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
