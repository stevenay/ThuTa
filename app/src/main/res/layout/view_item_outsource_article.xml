<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_full"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_article"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/otto_blue"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_outsrouce_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_medium"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_small"
                android:textSize="@dimen/text_small"
                android:textAllCaps="true"
                android:textColor="#00aaad"
                android:textStyle="bold"
                android:text="Technology" />

            <TextView
                android:id="@+id/tv_outsource_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_smallest"
                android:textSize="@dimen/text_regular"
                android:textAllCaps="false"
                android:textColor="#00aaad"
                android:text="medium.com" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">

                <com.padc.interactive_training.components.MMTextView
                    android:id="@+id/tv_article_title"
                    style="@style/cardViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginRight="@dimen/margin_small"
                    android:lineSpacingMultiplier="1"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/text_black_ish"
                    android:text="3 questions on cybersecurity that should be asked in the debates"
                    android:textSize="@dimen/text_regular_2x"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_article_title"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:orientation="horizontal">

                    <com.padc.interactive_training.components.MMTextView
                        android:id="@+id/tv_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_small"
                        android:textSize="@dimen/text_small"
                        android:text="Author: Kelly Shortridge ," />

                    <com.padc.interactive_training.components.MMTextView
                        android:id="@+id/tv_published_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_small"
                        android:textSize="@dimen/text_small"
                        android:text="12th, Aug, 2015" />

                </LinearLayout>

            </RelativeLayout>

            <com.padc.interactive_training.components.MMTextView
                android:id="@+id/tv_article_brief_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:ellipsize="end"
                android:maxLines="2"
                android:visibility="gone"
                android:text="@string/lorem_ipsum_one_third" />

